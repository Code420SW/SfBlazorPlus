@namespace Code420.SfBlazorPlus.BaseComponents.SidebarBase

@using Syncfusion.Blazor.Navigations

<SfSidebar  @ref=@sidebar
            Animate=@Animate
            ChildContent=@ChildContent
            CloseOnDocumentClick=@CloseOnDocumentClick
            EnableDock=@EnableDock
            EnableGestures=@EnableGestures
            EnablePersistence=@EnablePersistence
            IsOpen=@IsOpen
            Position=@Position
            ShowBackdrop=@ShowBackdrop
            Target=@Target
            Type=@Type

            DockSize=@DockSize
            HtmlAttributes=@HtmlAttributes
            ID=@CssId
            MediaQuery=@MediaQuery
            Width=@Width
            ZIndex=@ZIndex

            Changed=@ChangedHandler
            Created=@CreatedHandler
            Destroyed=@DestroyedHandler
            IsOpenChanged=@IsOpenChangedHandler
            OnClose=@OnCloseHandler
            OnOpen=@OnOpenHandler
            >

</SfSidebar>


<!--
    To ensure isolation of styling between multiple Sidebar components on a page, prepend the CssClass
    to each selector (assuming the CssClass is not String.Empty).
    Need to use CssClass to directly address.

    masterListboxElementCssSelector = .CssClass.e-sidebar
-->

<style>

    /* ==================== Sidebar Children ====================*/
    /* 
        Set the styling for all Tab container children
    */
    @(masterCssSelector) * {
        box-sizing: border-box;
    }



    /* ==================== Sidebar (Right & Left) ====================*/
    /*
        Set the styling for the Sidebar element

        Bootstrap defaults:
            background: #fff;
            height: 100%;
            overflow: auto;
            will-change: transform;
    */
    @(masterCssSelector) {
        background: @SidebarBackgroundColor;
    }



    /* ==================== Right Sidebar ====================*/
    /*
        Set the styling for the Right Sidebar element

        Bootstrap defaults:
            border-left: 1px solid #dee2e6;
            left: auto;
            right: 0;
            top: 0;
    */
    @(masterCssSelector).e-right {
        border-left: @SidebarBorderWidth @SidebarBorderStyle @SidebarBorderColor;
    }

    /*
        Set the styling for the Right Sidebar transition

        Bootstrap defaults (e-close):
            transition: width .5s ease, visibility 500ms;
            visibility: visible;

        Bootstrap defaults (e-open):
            transform: translateX(0%);
            transition: transform .5s ease;
            visibility: visible;
    */
    @(masterCssSelector).e-right.e-close.e-dock {
        transition: @SidebarCloseTransition;       /* The transform is defined on the element */
    }

    @(masterCssSelector).e-right.e-open {
        transition: @SidebarOpenTransition;
    }



    /* ==================== Left Sidebar ====================*/
    /*
        Set the styling for the Left Sidebar element

        Bootstrap defaults:
            border-left: 1px solid #dee2e6;
            left: 0;
            right: auto;
            top: 0;
    */
    @(masterCssSelector).e-left {
        border-right: @SidebarBorderWidth @SidebarBorderStyle @SidebarBorderColor;
    }

    /*
        Set the styling for the Left Sidebar transition

        Bootstrap defaults (e-close):
            transition: width .5s ease, visibility 500ms;
            visibility: visible;

        Bootstrap defaults (e-open):
            transform: translateX(0%);
            transition: transform .5s ease;
            visibility: visible;
    */
    @(masterCssSelector).e-left.e-close.e-dock {
        transition: @SidebarCloseTransition;       /* The transform is defined on the element */
    }

    @(masterCssSelector).e-left.e-open {
        transition: @SidebarOpenTransition;
    }



    /* ==================== Sidebar Overlay ====================*/
    /*
        Set the styling for the Sidebar overlay element
        Need to address the overlay element as a direct child of e-content-animation 
        which is a general sibling to the master selector

        Bootstrap defaults:
            background-color: rgba(0,0,0,0.5);
            height: 100%;
            left: 0;
            opacity: .5;
            pointer-events: auto;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 999;
    */
    @(masterCssSelector) ~ .e-content-animation > .e-sidebar-overlay {
        background-color: @BackdropBackgroundColor;
        opacity: @BackdropOpacity;
    }


</style>