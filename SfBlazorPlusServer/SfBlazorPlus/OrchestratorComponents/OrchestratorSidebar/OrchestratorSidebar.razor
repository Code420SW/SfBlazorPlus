@namespace Code420.SfBlazorPlus.OrchestratorComponents.OrchestratorSidebar

@using Code420.SfBlazorPlus.BaseComponents.SidebarBase
@using Code420.SfBlazorPlus.OrchestratorComponents.OrchestratorMenu
@using Syncfusion.Blazor.Navigations



<!--
    MediaQuery=@MediaQuery
    Auto, Over, Push, Slide
    
-->

<SidebarBase    @ref=@sidebarbase
                Animate=true
                CloseOnDocumentClick=false
                EnableDock=true
                EnableGestures=false
                EnablePersistence=false
                IsOpen=@isOpen
                Position=SidebarPosition.Left
                ShowBackdrop=false
                Width="175px"              
                Type=SidebarType.Push

                BackdropBackgroundColor="var(--sidebar__backdrop--bg)"
                BackdropOpacity="0.5"
                CssClass=@sidebarCssClass
                CssId="orchestrator-sidebar"
                DockSize="50px"
                HtmlAttributes=@myHtmlAttributes
                SidebarBackgroundColor="var(--sidebar--bg)"
                SidebarBorderWidth="2px"
                SidebarBorderStyle="solid"
                SidebarBorderColor="var(--sidebar__border--color)"
                SidebarCloseTransition="width ,.5s ease, visibility 500ms"
                SidebarOpenTransition="transform .5s ease"
                Target=".page__main"
                
                ZIndex=1

                Changed=@MyChangedHandler
                Created=@MyCreatedHandler
                Destroyed=@MyDestroyedHandler
                IsOpenChanged=@MyIsOpenChangedHandler
                OnClose=@MyOnCloseHandler
                OnOpen=@MyOnOpenHandler
                >

    <ChildContent>
        <OrchestratorMenu   @ref=@menu 
                            OrchestratorRef=@OrchestratorRef 
                            DockedIconFontSize="18px"
                            DockedMenuWidth="50px"
                            SidebarCssClass=@sidebarCssClass
                            />
    </ChildContent>

</SidebarBase>
