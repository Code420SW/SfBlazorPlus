@namespace Code420.SfBlazorPlus.OrchestratorComponents.OrchestratorSidebarButton

@using Code420.SfBlazorPlus.BaseComponents.IconButtonBase
@using Syncfusion.Blazor.Buttons
@using Code.Enums

<!--
    Normal background-color = rgb(108, 117, 125)
    Hover background-color = rgb(90, 98, 104)
    Active background-color = rgb(84, 91, 98)
    
-->
<IconButtonBase @ref=@iconButton
                IsDisabled=false
                IsPrimary=false
                IsToggle=false
                IconPosition=@IconPosition.Left
                IconButtonStyle=@IconButtonStyle.Default

                CssClass="button__sidebar-toggle"
                IconCss=@currentIconCss
                IconFontSize="1em"
                IconFontColor="var(--sidebar-btn__icon-normal--font-color)"
                IconFontTextAlign="center"
                IconFontLineHeight="1.0"
                IconFontVerticalAlign="middle"
                ButtonNormalBackgroundColor="var(--sidebar-btn__btn-normal--background-color)"
                ButtonNormalBorder="2px solid var(--sidebar-btn__btn-normal--border-color)"
                ButtonHoverBackgroundColor="var(--sidebar-btn__btn-hover--background-color)"
                ButtonHoverBorder="2px solid var(--sidebar-btn__btn-hover--border-color)"
                ButtonActiveBackgroundColor="var(--sidebar-btn__btn-active--background-color)"
                ButtonActiveBorderColor="var(--sidebar-btn__btn-active--border-color)"
                ButtonDisabledOpacity=".65"
                ButtonHeight="30px"
                ButtonWidth="30px"
                HoverScale=1.1m
                Margin="3px auto"
                Padding="0px"

                OnClick=@MyButtonClickHandler
                >

</IconButtonBase>
