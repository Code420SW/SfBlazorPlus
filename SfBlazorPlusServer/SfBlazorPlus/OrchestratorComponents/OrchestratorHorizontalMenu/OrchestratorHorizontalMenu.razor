@namespace Code420.SfBlazorPlus.OrchestratorComponents.OrchestratorHorizontalMenu

@using Code420.SfBlazorPlus.BaseComponents.MenuBase
@using Code420.SfBlazorPlus.Pages.Orchestrator
@using Code420.SfBlazorPlus.Code.Models.Menus
@using Syncfusion.Blazor.Navigations
@using System.Diagnostics


<!--
    
    
-->


<MenuBase   @ref=@menubase
            TValue=@OrchestratorMenuItem
            EnableScrolling=true
            HamburgerMode=false
            Items=@OrchestratorRef.MainMenuItems
            Orientation=Orientation.Horizontal
            ShowItemOnClick=false
            Target=".header2__menu"
            Title="Menu Title"

            Closed=@MyClosedHandler
            Created=@MyCreatedHandler
            ItemSelected=@MyItemSelectedHandler
            OnClose=@MyOnCloseHandler
            OnItemRender=@MyOnItemRenderHandler
            OnOpen=@MyOnOpenHandler
            Opened=@MyOpenedHandler

            CssClass=@menuCssClass

            MenuBorder="none"
            MenuBorderRadius="4px"
            MenuFontColor="limegreen"
            MenuFontSize="14px"
            MenuFontWeight="normal"
            MenuTextAlign="left"
            MenuBackgroundColor="inherit"
            MenuMinimumWidth="auto"
            MenuMargin="0px 12px"
            MenuPadding="3px 0px 0px 0px"

            MenuItemHeight="30px"
            MenuItemLineHeight="30px"
            MenuItemPadding="0px 30px 0px 12px"

            MenuItemSelectedFontColor="#FFF"
            MenuItemSelectedBackgroundColor="#007BFF"

            MenuIconFontColor="inherit"
            MenuIconFontSize="14px"
            MenuIconHeight="auto"
            MenuIconLineHeight="30px"
            MenuIconWidth="1em"
            MenuIconTextAlign="center"
            MenuIconRightMargin="8px"
            MenuIconVerticalAlign="middle"

            MenuCaretFontColor="inherit"
            MenuCaretFontSize="9px"
            MenuCaretHeight="auto"
            MenuCaretLineHeight="30px"
            MenuCaretWidth="auto"
            MenuCaretRight="12px"
            MenuCaretTop="0px"

            SeparatorBorder="1px solid #E9ECEF"
            SeparatorHeight="auto"
            SeparatorLineHeight="normal"
            SeparatorMargin="6px 0px"
            
            MenuPopupBorder="1px solid rgba(0,0,0,0.15)"
            MenuPopupBorderRadius="4px"
            MenuPopupFontColor="#007BFF"
            MenuPopupFontSize="14px"
            MenuPopupFontWeight="normal"
            MenuPopupTextAlign="left"
            MenuPopupBackgroundColor="#FFF"
            MenuPopupBoxShadow="none"
            MenuPopupLeftMargin="-4px"
            >

    <MenuFieldSettings  Text=@nameof(OrchestratorMenuItem.MenuText)
                        Children=@nameof(OrchestratorMenuItem.SubMenu)
                        IconCss=@nameof(OrchestratorMenuItem.IconCss)
                        ItemId=@nameof(OrchestratorMenuItem.ItemId)
                        ParentId=@nameof(OrchestratorMenuItem.ParentId)
                        Disabled=@nameof(OrchestratorMenuItem.IsDisabled)
                        Hidden=@nameof(OrchestratorMenuItem.IsHidden)
                        Separator=@nameof(OrchestratorMenuItem.IsSeparator)
                        Url=@nameof(OrchestratorMenuItem.Url)
                        HtmlAttributes=@nameof(OrchestratorMenuItem.HtmlAttributes)
                        >
    </MenuFieldSettings>

</MenuBase>

